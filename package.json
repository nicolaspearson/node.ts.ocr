{
	"name": "node-ts-ocr",
	"version": "1.0.3",
	"description": "A Typescript implementation for PDF / Image OCR (Optical Character Recognition) processing using Tesseract",
	"main": "src/index.js",
	"scripts": {
		"build": "npm run tslint && rm -rf ./src/index.js && npm run build:ts",
		"build:ts": "tsc --rootDir ./src/",
		"prettier": "prettier --write \"src/**/*.{ts,tsx,css}\"",
		"example": "ts-node ./src/example/index.ts",
		"tslint": "tslint --fix -c tslint.json -p tsconfig.json",
		"test": "jest",
		"test:coverage": "npm test -- --coverage",
		"test:badges": "npm run test:coverage  && jest-coverage-badges",
		"prepare": "npm run build"
	},
	"keywords": [
		"ocr",
		"tesseract",
		"pdf",
		"optical",
		"character",
		"recognition",
		"nodejs",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nicolaspearson/node.ts.ocr"
	},
	"author": "Nicolas Pearson",
	"license": "BSD-3-Clause",
	"dependencies": {
		"temp": "~0.9.0"
	},
	"devDependencies": {
		"@types/jest": "~23.3.13",
		"@types/node": "~10.12.19",
		"@types/temp": "~0.8.32",
		"jest": "~23.6.0",
		"jest-coverage-badges": "^1.1.2",
		"prettier": "~1.16.1",
		"ts-jest": "~23.10.5",
		"ts-node": "~8.0.2",
		"tslint": "~5.12.1",
		"typescript": "~3.2.4"
	}
}

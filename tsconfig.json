{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es2015",
		"lib": ["es2015", "es2016", "es2017"],
		"module": "commonjs",
		"outDir": "./src",
		"rootDir": ".",
		"noEmitOnError": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"removeComments": true /* Do not emit comments to output. */,
		"strict": true /* Enable all strict type-checking options. */,
		"noImplicitAny": true /* Raise error on expressions and declarations with an implied 'any' type. */,
		"sourceMap": false,
		"noUnusedLocals": true,
		"pretty": true,
		"typeRoots": [
			"node_modules/@types",
			"src/types/**/*.d.ts"
		] /* List of folders to include type definitions from. */,
		"experimentalDecorators": true /* Enables experimental support for ES7 decorators. */,
		"emitDecoratorMetadata": true /* Enables experimental support for emitting type metadata for decorators. */,
		"allowJs": false,
		"strictPropertyInitialization": false /* This flag performs checks to ensure that each instance property of a class gets initialized in the constructor body, or by a property initializer. */
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "scripts", "test", "./src/example"]
}
